/* 滑动菜单栏的总内容区域 */
.uni-slidingMenu {
	width: 100%;
	white-space: nowrap;
	height: 100rpx;
	background-color: #FFFFFF;
}
/* 循环显示的菜单栏 */
.slidingMenuList {
	height: 100rpx;
	line-height: 100rpx;
	display: inline-block;
	font-size: 24rpx;
	margin-left: 80rpx;
	color:#7d7778;
}
.slidingMenuList:last-child{
	margin-right: 60rpx;
}
/* 点击选中菜单栏时的样式 */
.active {
	color: #414247;
	font-size: 24rpx;
	margin-left: 80rpx;
	font-weight: 600;
	border-bottom: 4rpx solid #000000;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
